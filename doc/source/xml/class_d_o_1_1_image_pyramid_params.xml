      <memberdef kind="function" id="class_d_o_1_1_image_pyramid_params_1a7f000d11194059b31babe0cc8c75e475" prot="public" static="no" const="yes" explicit="no" inline="yes" virt="non-virtual">
        <type>double</type>
        <definition>double cameraSigma</definition>
