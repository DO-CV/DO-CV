PROJECT_NAME = "Sara"

INPUT = cpp/src \
        cpp/drafts/ \
        cpp/examples \
        cpp/pipelines

EXAMPLE_PATH = cpp/examples \
               cpp/drafts/OpenCL/examples

RECURSIVE = YES

EXCLUDE = cling \
          cmake \
          cpp/third-party \
          cpp/test \
          data \
          doc \
          scripts

EXCLUDE_PATTERNS += */cpp/src/**.cpp \
                    */cpp/drafts/*/test/*.cpp \
                    */cpp/drafts/Halide/*

GENERATE_TREEVIEW = YES
HTML_DYNAMIC_SECTIONS = YES
MARKDOWN_SUPPORT = YES
TOC_INCLUDE_HEADINGS = 2

ENABLE_PREPROCESSING = YES
MACRO_EXPANSION = YES
PREDEFINED = DOXYGEN_SHOULD_SKIP_THIS
